<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <a href="{{site.url}}"><img src="{{ options.logo }}" alt="{{site.name}}" class="footer__logo"></a>
      <address class="footer__address">{{ options.address }}</address>
      <ul class="footer__phones">
        {% for item in options.phones %}
          <li><a href="tel: {{ item.phone }}">{{ item.phone }}</a></li>
        {% endfor %}
      </ul>
      <a href="mailto: {{ options.email }} " class="footer__email">{{ options.email }}</a>
    </div>
  </div>
</footer>

<div class="modal modal-success" id="modal-success">
  <div class="modal__box modal__box_small">
    <div class="modal__header">
      <button class="modal__close" data-close="modal">&times;</button>
    </div>
    <div class="modal__body">
      <div class="modal__subtitle">
        {{ function('__', '[:uk]Дякуемо за Ваше звернення.<br>Ми зателефонуемо Вам найближчим часом[:][:ru]Спасибо за Ваше обращение.<br>Мы свяжемся с Вами в ближайшее время[:]') }}
      </div>
    </div>
  </div>
</div>