<div class="horizontal-list">
  {% if items %}
    {% for item in items %}
      <div class="horizontal-list__item">
        <div class="horizontal-list__item-image">
          <img src="{{ item.image }}" alt="{{ item.title|striptags or item.content|striptags }}">
        </div>
        <div class="horizontal-list__item-content">
          {% if item.title %}
            <div class="horizontal-list__item-title">{{ item.title }}</div>
          {% endif %}
          {% if item.content %}
            <div class="horizontal-list__item-content">{{ item.content }}</div>
          {% endif %}
        </div>

      </div>
    {% endfor %}
  {% endif %}
</div>