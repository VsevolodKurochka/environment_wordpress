<section class="contacts-greeting">
  {% include 'partial/clouds.twig' with {limit: 4, commonClass: 'contacts-greeting__cloud'} %}
  <div class="container">
    <div class="contacts-greeting__grid">
      <div class="contacts-greeting__body">
        <div class="section-header">
          <h1 class="section-header__title section-header__title_large contacts-greeting__title">{{ post.get_field('title') }}</h1>
          <h2 class="section-header__subtitle">{{ post.get_field('subtitle') }}</h2>
        </div>
        <div class="contacts-greeting__info">
          <div class="contacts-greeting__contacts">
            <address class="contacts-greeting__address">{{ options.address }}</address>
            <ul class="contacts-greeting__phones">
              {% for item in options.phones %}
                <li><a href="tel: {{ item.phone }}">{{ item.phone }}</a></li>
              {% endfor %}
            </ul>
            <a href="mailto: {{ options.email }} " class="contacts-greeting__email">{{ options.email }}</a>
          </div>
          <div class="contacts-greeting__map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d34166.82119111212!2d30.466172927696466!3d50.46970178280644!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40d4cdd780495d0f%3A0x323c40e3b0f35eba!2z0YPQuy4g0JvQtdGA0LzQvtC90YLQvtCy0YHQutCw0Y8sIDQsINCa0LjQtdCyLCAwMjAwMA!5e0!3m2!1sru!2sua!4v1601358091996!5m2!1sru!2sua" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
          </div>
        </div>
      </div>
      {% include 'partial/landing-form.twig' with {
        title: options.form_title,
        form: options.form_shortcode
      } %}
    </div>
  </div>
</section>